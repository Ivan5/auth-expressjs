<% include ../layout/main %>

<div class="container">
  <div class="flex-row d-flex justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Sign Up
        </div>
        <div class="card-body">
          <form action="/user/signup" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                id=""
                placeholder="Email"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                name="password"
                id=""
                placeholder="******"
                class="form-control"
              />
            </div>
            <button class="btn btn-outline-primary" type="submit">
              Sign Up
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
